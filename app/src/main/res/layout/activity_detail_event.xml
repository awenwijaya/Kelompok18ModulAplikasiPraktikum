<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".events.DetailEventActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Acara"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lihatlah detail acara sebagai berikut"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montserrat"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/imageURLDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView7">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewDetailKegiatanAdmin"
                android:layout_width="90dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_height="90dp" />

            <TextView
                android:layout_below="@+id/imageViewDetailKegiatanAdmin"
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Acara"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/NamaAcaraDetailAdmin"
                android:layout_below="@+id/imageViewDetailKegiatanAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_toRightOf="@+id/textView9"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Acara"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/textView9"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/TanggalAcaraDetailAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_below="@+id/NamaAcaraDetailAdmin"
                android:layout_toRightOf="@+id/textView11"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"/>

            <TextView
                android:id="@+id/textView36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tempat Acara"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/textView11"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/TempatAcaraDetailAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_below="@+id/textView11"
                android:layout_toRightOf="@+id/textView11"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"/>

            <TextView
                android:id="@+id/textView45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/textView36"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/AlamatAcaraDetailAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_below="@+id/textView36"
                android:layout_toRightOf="@+id/textView45"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"/>

            <TextView
                android:id="@+id/textView47"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keterangan"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/textView45"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/KeteranganAcaraDetailAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_below="@+id/textView45"
                android:layout_toRightOf="@+id/textView47"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat" />

            <Button
                android:id="@+id/btnEditKegiatanDetailAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EDIT KEGIATAN"
                android:layout_below="@id/KeteranganAcaraDetailAdmin"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"/>

            <Button
                android:id="@+id/btnDeleteKegiatanAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HAPUS KEGIATAN"
                android:layout_below="@id/KeteranganAcaraDetailAdmin"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>